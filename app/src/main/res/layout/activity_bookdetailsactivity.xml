<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:backgroundTintMode="multiply"
    tools:context=".bookdetailsactivity"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/bookbgimg"
        android:layout_width="360dp"
        android:layout_height="542dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.6"
        app:srcCompat="@drawable/book1"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="200dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FEFEFE"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="210dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/bookimg"
            android:layout_width="151dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/book1"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:id="@+id/bookname"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Book name"
                android:textSize="50px"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/bookauthorname"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text=" by \n Author name"
                android:textSize="30px"
                android:layout_marginRight="18dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="196dp"
                tools:layout_editor_absoluteY="236dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="310dp"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/bookdec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="It was November.Although it was not yet late, the sky was dark when I turned into Laundress Passage. Father had finished for the day, switched off the shop lights and closed the shutters; but so I would not come home to darkness he had left on the light over the stairs to the flat. Through the glass in the door it cast a foolscap rectangle of paleness onto the wet pavement, and it was while I was standing in that rectangle, about to turn my key in the door, that I first saw the letter. Another white rectangle, it was on the fifth step from the bottom, where I couldn't miss it."
            android:textSize="18dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="324dp" />

        <TextView
            android:id="@+id/postername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/poster1_name"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            tools:ignore="MissingConstraints"
             />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/borrowbookbtn"
        android:layout_width="278dp"
        android:layout_height="58dp"
        android:text="Borrow this Book"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:textSize="30px"
        app:backgroundTint="@android:color/holo_red_dark"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.9"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</android.support.v7.widget.CardView>